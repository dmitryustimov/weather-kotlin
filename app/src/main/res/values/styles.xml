<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="emptyTextStyle">@style/Widget.TextView.Empty</item>
        <item name="emptyActionStyle">@style/Widget.Button.Action.Borderless</item>

        <item name="actionBarSize">@dimen/action_bar_min_height</item>
    </style>

    <style name="Widget.TextView.Empty" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.Button.Action.Borderless" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">@dimen/keyline_16</item>
        <item name="android:paddingRight">@dimen/keyline_16</item>
    </style>

</resources>
